<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AID">

    <EditText
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/tv_standard_margin"
        android:layout_marginRight="@dimen/tv_standard_margin"
        android:hint="@string/deal_title_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:layout_marginEnd="@dimen/tv_standard_margin"
        android:layout_marginRight="@dimen/tv_standard_margin"
        android:inputType="numberDecimal"
        android:hint="@string/price_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:layout_marginEnd="@dimen/tv_standard_margin"
        android:layout_marginRight="@dimen/tv_standard_margin"
        android:hint="@string/deal_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />
</androidx.constraintlayout.widget.ConstraintLayout>
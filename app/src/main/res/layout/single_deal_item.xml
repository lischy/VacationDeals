<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemTvDeals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/dealsItemImgView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dealsItemImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:layout_marginTop="@dimen/tv_standard_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/dealItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_standard_margin"
        android:layout_marginLeft="@dimen/tv_standard_margin"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/dealsItemImgView"
        app:layout_constraintTop_toBottomOf="@+id/itemTvDeals" />

    <TextView
        android:id="@+id/itemTvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tv_standard_margin"
        android:layout_marginRight="@dimen/tv_standard_margin"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealItemDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>